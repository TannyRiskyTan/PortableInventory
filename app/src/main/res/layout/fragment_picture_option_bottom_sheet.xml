<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/RootDimension">


    <LinearLayout
        android:id="@+id/linear_layout_use_camera"
        style="@style/OptionWrapper"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            style="@style/ImgWrapper"
            android:src="@drawable/ic_baseline_add_a_photo_24"
            android:contentDescription="@string/using_camera" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/using_camera" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_use_gallery"
        style="@style/OptionWrapper"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            style="@style/ImgWrapper"
            android:src="@drawable/ic_baseline_use_gallery_24"
            android:contentDescription="@string/using_gallery" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/using_gallery" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>